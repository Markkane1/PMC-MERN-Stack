{
  "name": "pmc-be-mern",
  "version": "1.0.0",
  "private": true,
  "description": "PMC backend re-implemented in MERN (Express + MongoDB).",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "seed": "ts-node src/scripts/seedBaseData.ts",
    "seed:tehsils": "ts-node src/scripts/seedTehsils.ts",
    "seed:idm": "ts-node src/scripts/seedIdm.ts",
    "migrate:pmis": "ts-node src/scripts/migratePmisPostgresToMongo.ts",
    "migrate:pmis:aligned": "ts-node src/scripts/migratePmisPostgresToMongoAligned.ts",
    "migrate:pmis:mongo": "ts-node src/scripts/migratePmisMongoRawToAligned.ts",
    "rename:pmis:collections": "ts-node src/scripts/renamePmisCollections.ts",
    "migrate:auth:mern": "ts-node src/scripts/migrateAuthToMern.ts",
    "cleanup:bak": "ts-node src/scripts/cleanupBackupCollections.ts",
    "superadmin:static": "ts-node src/scripts/createStaticSuperAdmin.ts",
    "ensure:applicant-perms": "ts-node src/scripts/ensureApplicantPermissions.ts",
    "db:index": "ts-node src/scripts/createIndexes.ts",
    "load:test:baseline": "ts-node src/scripts/loadTest.baseline.ts",
    "load:test:stress": "ts-node src/scripts/loadTest.stress.ts",
    "load:test:sustained": "ts-node src/scripts/loadTest.sustained.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.9.3",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.5.0",
    "mongodb": "^7.0.0",
    "mongoose": "^8.8.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "pdfkit": "^0.16.0",
    "pg": "^8.17.2",
    "svg-captcha": "^1.4.0",
    "uuid": "^11.0.3",
    "wkx": "^0.5.0",
    "zod": "^3.23.8"
