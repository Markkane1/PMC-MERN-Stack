# Server Configuration
PORT=4000
NODE_ENV=development

# CRITICAL: Generate strong JWT_SECRET with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=replace-with-at-least-32-random-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=replace-with-a-different-strong-random-secret
JWT_REFRESH_EXPIRES_IN=30d
ALLOW_LEGACY_MASTERKEY_LOGIN=false

# MongoDB Connection (use MongoDB Atlas or secure local instance)
MONGO_URI=mongodb://localhost:27017/pmis

# CORS: Set to exact frontend URL (never use *)
CORS_ORIGIN=http://localhost:5173

# File Upload Directory
UPLOAD_DIR=uploads

# OAuth Configuration - Google
# Create OAuth credentials at: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:4000/api/accounts/oauth/google/callback

# OAuth Configuration - GitHub
# Create OAuth app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:4000/api/accounts/oauth/github/callback

# Application URL (for frontend redirects)
APP_URL=http://localhost:5173
